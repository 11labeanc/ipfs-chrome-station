{
  "version": "0.0.1",
  "name": "ipfs-station",
  "manifest_version": 2,
  "description": "IPFS station",
  "browser_action": {
    "default_title": "ipfs-station",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "background": {
    "page": "background.html"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "content_security_policy": "default-src 'self'; script-src 'self'; connect-src *; style-src * 'unsafe-inline'; img-src 'self' data:;"
}
